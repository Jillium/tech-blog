<article class="post">
      <div class="title" style="background-color: #f5f5f5; display: flex; justify-content: space-between;">
        <a href="/post/{{id}}"><div class="post-title">{{title}}</div></a>
        <div class="blue-text">Posted by {{user.username}} on
        {{format_date created_at}}
        </div>
      </div>
      <div class="post-content">
          {{content}}
      </div>
      <div class="meta">
        <a href="/post/{{id}}">{{format_plural "comment" comments.length}}</a>
      </div>
      
      
    </article>